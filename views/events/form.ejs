<% layout('./layouts/boilerplate') %>
<div class="mt-5">
  <div class="row">
    <div class="col-8 offset-2 offset-lg-4 col-lg-4 offset-md-3 col-md-6">
      <div class="card">
        <div class="card-body shadow">
          <h4 class="card-title text-center">Event Details</h4>
          <form
            action="/events"
            method="POST"
            class="needs-validation"
            novalidate
          >
            <div class="form-group">
              <label for="formGroupExampleInput">Location</label>
              <input
                type="text"
                class="form-control"
                id="formGroupExampleInput"
                name="Location"
                required
              />
              <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="form-group">
              <label for="formGroupExampleInput3">Time</label>
              <input
                type="time"
                class="form-control"
                id="formGroupExampleInput3"
                name="Time"
                required
              />
              <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="form-group">
              <label for="formGroupExampleInput4">Radius</label>
              <input
                type="number"
                class="form-control"
                id="formGroupExampleInput4"
                name="Radius"
                required
              />
              <div class="valid-feedback">Looks Good</div>
            </div>
              <div class="mb-3">
                <label for="validationTextarea">Description</label>
                <textarea class="form-control" id="validationTextarea" name="Description" required></textarea>
                <div class="valid-feedback">
                  Looks Good
                </div>
                </div>
            <button type="submit" class="btn btn-primary btn-block">
              Submit
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
