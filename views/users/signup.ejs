<% layout('./layouts/boilerplate') %>
 <div class="mt-5">
  <div class="row">
    <div class="col-8 offset-2 offset-lg-4 col-lg-4 offset-md-3 col-md-6">
        <div class="card shadow">
          <div class="card-body">
            <h4 class="card-title text-center">Register</h4>
            <form action="/register" method="POST" class="needs-validation" novalidate>
              <div class="form-group">
                  <label for="formGroupExampleInput">Username</label>
                  <input type="text" class="form-control" id="formGroupExampleInput" name="username" required>
                  <div class="valid-feedback">
                    Looks Good
                  </div>
                  </div>
                  <div class="form-group">
                      <label for="formGroupExampleInput2">Email</label>
                      <input type="text" class="form-control" id="formGroupExampleInput2" name="email" required>
                      <div class="valid-feedback">
                        Looks Good
                      </div>
                    </div>

                    <div class="form-group">
                      <label for="formGroupExampleInput3">Age</label>
                      <input type="number" class="form-control" id="formGroupExampleInput3" name="age" required>
                      <div class="valid-feedback">
                        Looks Good
                      </div>
                    </div>

                    <div class="form-group">
                      <label for="formGroupExampleInput4">Occupation</label>
                      <input type="text" class="form-control" id="formGroupExampleInput4" name="Occupation" required>
                      <div class="valid-feedback">
                        Looks Good
                      </div>
                    </div>

                  <div class="form-group">
                          <label for="formGroupExampleInput5">Password</label>
                          <input type="password" class="form-control" id="formGroupExampleInput5" name="password" required>
                          <div class="valid-feedback">
                            Looks Good
                  </div>
                </div>
                  <button type="submit" class="btn btn-primary btn-block">Submit</button>
          </form>
          </div>
        </div>
    </div>
</div>
 </div>